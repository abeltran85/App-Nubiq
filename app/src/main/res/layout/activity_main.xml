<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/portada"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view"
            card_view:cardCornerRadius="4dp"
            android:background="@color/blanco"
            android:layout_width="370dp"
            android:layout_height="370dp"
            tools:layout_editor_absoluteY="37dp"
            tools:layout_editor_absoluteX="186dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginTop="43dp"
            android:layout_marginStart="157dp"
            card_view:cardUseCompatPadding="true"
            card_view:cardElevation="4dp"
            >

    <android.support.v7.widget.LinearLayoutCompat android:layout_width="match_parent"
                                                  android:layout_height="match_parent"
                                                  android:orientation="vertical">
        <TextView
                android:drawableStart="@drawable/ic_action_check"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:drawablePadding="20dp"
                android:text="@string/login"
                android:textStyle="bold"
                android:textColor="@color/blanco"
                android:padding="10dp"
                android:background="@color/nubiq"

        />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/textlogin"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/user"/>

        <android.support.design.widget.TextInputEditText android:id="@+id/inputuser"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"/>
        <TextView android:id="@+id/password"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/password"/>

        <android.support.design.widget.TextInputEditText android:id="@+id/inputpassword"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         />
        <TextView android:id="@+id/idClient"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="@string/idClient"/>

        <android.support.design.widget.TextInputEditText android:id="@+id/inputclient"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="wrap_content"
                                                         android:hint="@string/textinput"

        />
        <Button android:id="@+id/btnsubmit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textbtn"/>
        </android.support.v7.widget.LinearLayoutCompat>

    </android.support.v7.widget.CardView>
</RelativeLayout>