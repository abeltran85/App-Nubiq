<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:background="@drawable/portada"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <android.support.v7.widget.CardView

            android:background="@color/blanco"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteY="10dp"
            tools:layout_editor_absoluteX="186dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginStart="157dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:minHeight="200dp">


        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">

            <TextView
                    android:drawableStart="@drawable/ic_action_check"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:drawablePadding="20dp"
                    android:text="@string/login"
                    android:textStyle="bold"
                    android:textColor="@color/blanco"
                    android:padding="10dp"
                    android:background="@color/nubiq"

                    />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:gravity="center"
                    android:text="@string/textLogin"
                    android:textSize="16sp"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="20dp"
                    android:text="@string/user"
                    android:textSize="18sp"/>

            <EditText
                    android:id="@+id/inputuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:autofillHints=""
                    android:padding="5dp"
                    android:hint="@string/hintUser"
                    android:background="@drawable/redondo"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"

                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"/>

            <TextView
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/password"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    />

            <EditText
                    android:id="@+id/inputpassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:autofillHints=""
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="18sp"
                    android:hint="@string/hintPassword"
                    android:background="@drawable/redondo"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"/>

            <TextView
                    android:id="@+id/idClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/idClient"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"/>


            <EditText
                    android:id="@+id/inputClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/textInput"
                    android:inputType="number"
                    android:textSize="18sp"
                    android:autofillHints=""
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/redondo"
                    style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"/>

            <CheckBox
                    android:text="@string/Presentacions"
                    android:textSize="16sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/checkBox"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:id="@+id/btnSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:text="@string/textBtn"
                        android:textColor="@color/blanco"
                        android:background="@color/nubiq"
                        android:paddingHorizontal="20dp"/>
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>